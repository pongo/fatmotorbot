{
  "name": "fatmotorbot",
  "version": "0.0.1",
  "description": "",
  "main": "dist/src/main.js",
  "scripts": {
    "build": "rimraf dist/* && tsc --newLine lf",
    "eslint": "eslint ./src/**/*.ts ./test/**/*.ts",
    "eslintfix": "eslint --fix ./src/**/*.ts ./test/**/*.ts",
    "tscheck": "tsc --noEmit",
    "tslint": "tslint --force --project . -t codeframe",
    "tslintfix": "tslint --force --project . --fix",
    "test": "mocha",
    "test:watch": "npm test --- --watch --watch-extensions ts --reporter min",
    "cov": "nyc mocha --require source-map-support/register -t 10000 test/nodb/**/*.test.ts && npm run open_cov",
    "cov:db": "nyc mocha --require source-map-support/register -t 10000 test/**/*.test.ts && npm run open_cov",
    "open_cov": "open-cli ./coverage/lcov-report/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pongo/fatmotorbot.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pongo/fatmotorbot/issues"
  },
  "homepage": "https://github.com/pongo/fatmotorbot",
  "dependencies": {
    "big.js": "^5.2.2",
    "date-fns": "^2.0.1",
    "envalid": "^5.0.0",
    "module-alias": "^2.2.1",
    "pg-connection-string": "^2.1.0",
    "postgres-migrations": "^3.0.2",
    "slonik": "^18.11.1",
    "telegraf": "^3.32.0"
  },
  "devDependencies": {
    "@types/big.js": "^4.0.5",
    "@types/chai": "^4.2.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.4",
    "@types/sinon": "^7.0.13",
    "@types/slonik": "^18.6.0",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "chai": "^4.2.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-fatmotorbot": "file:packages/eslint-plugin-fatmotorbot",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.5",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "open-cli": "^5.0.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "sinon": "^7.4.2",
    "source-map-support": "^0.5.13",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-no-circular-imports": "^0.7.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.6.2",
    "typestrict": "^1.0.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "lf",
    "printWidth": 120,
    "overrides": [
      {
        "files": [
          ".eslintrc.js",
          ".mocharc.js"
        ],
        "options": {
          "singleQuote": false,
          "quoteProps": "consistent"
        }
      }
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "*.test.ts",
      "test/**/*.ts",
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "cache": true,
    "all": true
  },
  "_moduleAliases": {
    "src": "./dist/src",
    "test": "./dist/test"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run build"
    }
  }
}
